[env:teensy41]
platform = teensy
board = teensy41
framework = arduino

; Library dependencies
lib_deps = 
    adafruit/Adafruit NeoPixel@^1.11.0
    adafruit/Adafruit MPR121@^1.1.1
    ssilverman/QNEthernet@^0.20.0
    br3ttb/PID@^1.2.1
    ssilverman/LiteOSCParser@^1.4.0
    https://github.com/CNMAT/OSC.git
    ; http://github.com/ssilverman/LiteOSCParser.git
   ; CNMAT/OSC@^3.5.7

; Build options
build_flags = 
    -DUSB_SERIAL
    -DTEENSYDUINO=157

; Monitor options
monitor_speed = 115200

; Upload options
upload_protocol = teensy-cli